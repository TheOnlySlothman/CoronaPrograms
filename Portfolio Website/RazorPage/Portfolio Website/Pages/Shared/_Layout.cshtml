<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Min Portfolie Hjemmeside</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3" style="background-color: #202020">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="color: white">Min Portfolie Hjemmeside</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="margin: 10px">
                            <a class="nav-link text-light btn btn-dark" asp-area="" asp-page="/Index">Beskrivelse</a>
                        </li>
                        @*
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                        *@
                        <li class="nav-item" style="margin: 10px">
                            @*
                                <a class="nav-link text-light btn btn-dark" asp-area="" asp-page="/PortFolio">PortFolie</a>
                            *@
                            <a class="nav-link text-light btn btn-dark" asp-area="" asp-controller="PortFolio" asp-action="Index">PortFolie</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="background-color: #202020">
        <div class="container text-center">
            &copy; 2020 - Portfolio_Website - Mail: <a href="mailto:Lasselm013@gmail.com">Lasselm013@gmail.com</a> - <a>Tlf: 60541252</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
