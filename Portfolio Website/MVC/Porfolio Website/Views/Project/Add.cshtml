@model Portfolio_Website.Models.Project
@{
    ViewData["Title"] = "Add Project";
}

<link rel="stylesheet" href="~/css/StyleSheet.css" />

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-white-50 pl-3">Add Project</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="WebLink"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Img"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Title" class="form-control"/>
                    </div>
                    <div class="col-3">
                        <input asp-for="Description" class="form-control"/>
                    </div>
                    <div class="col-3">
                        <input asp-for="WebLink" class="form-control" placeholder="https://google.com"/>
                    </div>
                    @*
                    <div class="col-3">
                        <input asp-for="Img" class="form-control" type="file" id="imgUpload" />
                    </div>
                    *@
                </div>
                <div class="form-group row">
                    <div class="col-12 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>